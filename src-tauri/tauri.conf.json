{
  "$schema": null,
  "productName": "slicePDF",
  "version": "0.1.1",
  "identifier": "com.slicedapplestudios.slicepdf",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "SlicePDF",
        "label": "main",
        "width": 800,
        "height": 600,
        "decorations": false,
        "visible": false
      },
      {
        "title": "SlicePDF",
        "label": "splash",
        "url": "splashscreen.html",
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/binaries/*"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/Square30x30Logo.png",
      "icons/Square44x44Logo.png",
      "icons/Square89x89Logo.png",
      "icons/icon.png"
    ]
  }
}
